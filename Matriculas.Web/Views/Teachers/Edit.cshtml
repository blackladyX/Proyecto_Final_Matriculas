@model Matriculas.Web.Models.Teacher

@{
    ViewData["Title"] = "Edit";
}
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
<link rel="stylesheet" href="~/lib/font-awesome/css/fontawesome.css" />
<link rel="stylesheet" href="~/lib/Font-Awesome/css/regular.min.css">
<link rel="stylesheet" href="~/lib/Font-Awesome/css/solid.min.css"> <br />
<h1>Edit</h1>

<h4>Teacher</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TeacherId" />
            <div class="form-group">
                <label asp-for="TeacherIdentification" class="control-label"></label>
                <input asp-for="TeacherIdentification" class="form-control" />
                <span asp-validation-for="TeacherIdentification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeacherFullName" class="control-label"></label>
                <input asp-for="TeacherFullName" class="form-control" />
                <span asp-validation-for="TeacherFullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dateofbirth" class="control-label"></label>
                <input asp-for="Dateofbirth" class="form-control" />
                <span asp-validation-for="Dateofbirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Experience" class="control-label"></label>
                <input asp-for="Experience" class="form-control" />
                <span asp-validation-for="Experience" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeacherAddress" class="control-label"></label>
                <input asp-for="TeacherAddress" class="form-control" />
                <span asp-validation-for="TeacherAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeacherCellPhone" class="control-label"></label>
                <input asp-for="TeacherCellPhone" class="form-control" />
                <span asp-validation-for="TeacherCellPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArtisticArea" class="control-label"></label>
                <input asp-for="ArtisticArea" class="form-control" />
                <span asp-validation-for="ArtisticArea" class="text-danger"></span>
            </div>
            <div class="form-group">
                  <input type="submit" value="Save" class="btn btn-primary" /> |
               <a asp-action="Index"> <i class="fas fa-arrow-left" > </i> </a>  
            </div>
        </form>
    </div>
</div>



